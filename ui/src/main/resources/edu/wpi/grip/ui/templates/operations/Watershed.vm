    public static void Watershed(Mat input,List<MatOfPoint> contours, Mat output){
            final Mat markers = new Mat(input.size(), CvType.CV_32SC1, new Scalar(0.0));
            output = new Mat(markers.size(), CvType.CV_8UC1, new Scalar(0.0));
            try {
                        for (int i = 0; i < contours.size(); i++) {
                            Imgproc.drawContours(markers, contours, i, Scalar.all((i + 1) * (255
                            /contours.size())), 5, Core.LINE_8, null, 2, null);
                        }
                        Imgproc.circle(markers, new Point(5, 5), 3, Scalar.all(255), -1, Core
                        .LINE_8,
                         0);

                        Imgproc.watershed(input, markers);
                        markers.convertTo(output, CvType.CV_8UC1);
                        Core.bitwise_not(output, output);
                    } finally {
                        markers.release();
                    }
	}